generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agricultor {
  id                Int         @id @default(autoincrement())
  nombre            String
  apellidos         String
  correo            String      @unique
  dni               String
  username          String      @unique
  fechaNacimiento   DateTime
  password          String
  propiedades       Propiedad[] // Un agricultor puede tener m√∫ltiples 
  fotoPerfil        String?     // URL de foto de perfil
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Cooperativa {
  id              Int          @id @default(autoincrement())
  nombre          String
  correo          String       @unique
  password        String
  direccion       String
  nif             String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Administrador {
  id              Int          @id @default(autoincrement())
  correo          String       @unique
  username        String       @unique
  password        String
  nombre          String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Propiedad {
    id              Int     @id @default(autoincrement())
    nombre          String
    descripcion     String
    tipo            String
    superficie      Int
    coordenadas     String
    direccion       String
    idPropietario   Int
    propietario     Agricultor    @relation(fields: [idPropietario], references: [id])
}
