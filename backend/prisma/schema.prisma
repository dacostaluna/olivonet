generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agricultor {
  id                Int         @id @default(autoincrement())
  nombre            String
  apellidos         String
  correo            String      @unique
  dni               String
  username          String
  fechaNacimiento   DateTime
  password          String
  propiedades       Propiedad[]? // Un agricultor puede tener m√∫ltiples propiedades
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Propiedad {
    id              Int     @id @default(autoincrement())
    tipo            String
    idPropietario   Int
    propietario     Agricultor    @relation(fields: [idPropietario], references: [id])
}
