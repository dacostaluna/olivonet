generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agricultor {
  id                Int         @id @default(autoincrement())
  nombre            String
  apellidos         String
  correo            String      @unique
  dni               String      @unique
  username          String      @unique
  fechaNacimiento   DateTime
  password          String
  propiedades       Propiedad[] // Un agricultor puede tener m√∫ltiples 
  fotoPerfil        String?     // URL de foto de perfil

  cooperativaId     Int?
  cooperativa       Cooperativa? @relation(fields: [cooperativaId], references: [id])

  mensajesIA        MensajeIA[]
  cosechas          Cosecha[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Cooperativa {
  id              Int          @id @default(autoincrement())
  nombre          String
  correo          String       @unique
  password        String
  direccion       String
  nif             String       @unique
  fotoPerfil      String?
  
  agricultores    Agricultor[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Administrador {
  id              Int          @id @default(autoincrement())
  correo          String       @unique
  username        String       @unique
  password        String
  nombre          String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Propiedad {
  id              Int           @id @default(autoincrement())
  nombre          String
  superficie      Int
  numOlivos       Int
  
  descripcion     String?
  coordenadas     String?
  direccion       String
  color           String?
  tieneRiego      Boolean?
  numOlivosRiego  Int?
  variedad        String?
  edadOlivos      Int?

  cosechas        Cosecha[]

  idPropietario   Int
  propietario     Agricultor@relation(fields: [idPropietario], references: [id])

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}


model Cosecha {

  id              Int          @id @default(autoincrement())
  fecha           DateTime
  kg              Decimal
  rendimiento     Decimal?
  numOlivos       Int
  temporada       Int


  idAgricultor    Int
  agricultor      Agricultor   @relation(fields: [idAgricultor], references: [id])

  idPropiedad     Int?
  propiedad       Propiedad?    @relation(fields: [idPropiedad], references: [id], onDelete: SetNull)

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model MensajeIA {
  id             Int         @id @default(autoincrement())
  contenido      String
  rol            RolIA       // "AGRICULTOR" o "IA"
  timestamp      DateTime    @default(now())

  agricultorId   Int
  agricultor     Agricultor  @relation(fields: [agricultorId], references: [id])
}

enum RolIA {
  AGRICULTOR
  IA
}
